{
  "name": "capstone-project",
  "author": {
    "name": "Albert Schilling",
    "email": "albertschilling@gmx.net"
  },
  "version": "1.1.0",
  "private": true,
  "dependencies": {
    "cors": "2.8.5",
    "firebase": "7.10.0",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.4.0",
    "styled-components": "5.0.1"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "start": "env-cmd -f .env.development react-scripts start",
    "build": "env-cmd -f .env.production react-scripts build",
    "build:dev": "env-cmd -f .env.development react-scripts build",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:dev": "npm run build:dev && firebase deploy -P dev --only hosting",
    "test": "  set CI=true && env-cmd -f .env.development react-scripts test --env=node",
    "test:watch": "env-cmd -f .env.development react-scripts test",
    "test:e2e": "npm-run-all --parallel --race start cypress:run",
    "test:e2e:dev": "npm-run-all --parallel build:dev start cypress:open",
    "test:coverage": "set CI=true && env-cmd -f .env.development react-scripts test --coverage --watchAll=false ",
    "istanbul": "open coverage/lcov-report/index.html",
    "firebase-emulator": "firebase emulators:start --only firestore",
    "eject": "react-scripts eject",
    "server": "json-server -p3001 db.json",
    "cypress:open": "env-cmd -f .env.development cypress open",
    "cypress:run": "env-cmd -f .env.development cypress run",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@firebase/testing": "0.18.2",
    "@storybook/addon-actions": "5.3.14",
    "@storybook/addon-docs": "5.3.14",
    "@storybook/addon-knobs": "5.3.14",
    "@storybook/addon-links": "5.3.14",
    "@storybook/addons": "5.3.14",
    "@storybook/preset-create-react-app": "1.5.2",
    "@storybook/react": "5.3.14",
    "@testing-library/cypress": "6.0.0",
    "@testing-library/jest-dom": "5.3.0",
    "@testing-library/react": "10.0.2",
    "@testing-library/user-event": "10.0.1",
    "acorn": "7.1.1",
    "cypress": "4.3.0",
    "env-cmd": "10.1.0",
    "json-server": "0.16.1",
    "kind-of": "6.0.3",
    "minimist": "1.2.5",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1"
  },
  "resolutions": {
    "minimist": "^1.2.5",
    "acorn": "^7.1.1",
    "kind-of": ">=6.0.3"
  },
  "babel": {
    "presets": "./.babelrc.js"
  }
}
